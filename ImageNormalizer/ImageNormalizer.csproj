<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Title>Image Normalizer</Title>
		<Product>Image Normalizer</Product>
		<Copyright>Copyright © Mihnea Rădulescu 2023 - 2024</Copyright>
		<AssemblyVersion>1.2024.01.15</AssemblyVersion>
		<Version>$(AssemblyVersion)</Version>
		<PublishSingleFile>true</PublishSingleFile>
		<SelfContained>true</SelfContained>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<DebugType>embedded</DebugType>
		<ApplicationIcon>ApplicationIcon.ico</ApplicationIcon>
		<RootNamespace>ImageNormalizer</RootNamespace>
		<AssemblyName>ImageNormalizer</AssemblyName>
	</PropertyGroup>

	<ItemGroup>
		<Resource Include="ApplicationIcon.ico">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</Resource>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="SixLabors.ImageSharp" Version="3.1.2" />
	</ItemGroup>

</Project>
